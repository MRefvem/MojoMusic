@page
@model Ecommerce_App.Pages.Dashboard.UpdateModel
@{
    ViewData["Title"] = "Update";
    Layout = "_Home";
}


<!Doctype html>

<html>
<head>
</head>
<body>
    <main>

        <div class="container text-white" style="margin-top:30px;">
            <h2>Update this Product's Info</h2>
        </div>

        <div class="row">
            <div class="col-md-6 d-flex justify-content-center adminPortal" style="margin-top:30px;">

                <form method="post" enctype="multipart/form-data">

                    <div class="form-group text-white">
                        <h2>Admin Portal</h2>
                        <p>Create a new product</p>
                        <p>Input all product info fields</p>
                    </div>

                    <div class="form-group text-white">
                        <input hidden placeholder="Product ID" asp-for="@Model.Product.Id" /> <br />
                    </div>

                    <div class="form-group text-white">
                        <input hidden asp-for="@Model.Product.Image" /><br />
                    </div>

                    <div class="form-group text-white">
                        <input placeholder="Product Name" asp-for="@Model.Product.Name" /> <br />
                    </div>

                    <div class="form-group text-white">
                        <input placeholder="SKU" asp-for="@Model.Product.SKU" /><br />
                    </div>

                    <div class="form-group text-white">
                        <input placeholder="Price" asp-for="@Model.Product.Price" /><br />
                    </div>

                    <div class="form-group text-white">
                        <textarea placeholder="Decription" asp-for="@Model.Product.Description"></textarea><br />
                    </div>

                    <div class="form-group text-white">
                        <button type="submit" class="btn btn-primary">Update Product Info</button>
                    </div>
                </form>

            </div>
        </div>

        <form method="post">
            <div id=@Model.Product.Name class="container bg-light border rounded bg-gradient-primary" style="margin-top:30px">

                <div class="row" style="margin-top:10px; margin-bottom:10px;">

                    <div class="col">
                        <h3>Name: @Model.Product.Name</h3>
                        <p>SKU: @Model.Product.SKU</p>
                        <p>Price: $@Model.Product.Price</p>
                        <p>Description: @Model.Product.Description</p>
                        <hr />
                        <a asp-page="/Dashboard/AdminPortal" class="nav-link">Back to Dashboard</a>
                    </div>
                </div>
            </div>
        </form>

    </main>

</body>
</html>
