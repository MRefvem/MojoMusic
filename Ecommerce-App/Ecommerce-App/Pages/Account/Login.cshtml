@page
@model Ecommerce_App.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Home";
}


<!Doctype html>

<html>
<head>
    <style>
        .login {
            margin: 0px auto;
        }
    </style>
</head>
<body>
    <main>

        <div class="row">
            <div class="col-md-4 d-flex justify-content-center login" style="margin-top:30px;">

                <form method="post">

                    <div class="form-group text-white">
                        <h1>Login</h1>
                    </div>

                    <div class="form-group">
                        <div asp-validation-summary="All"></div>
                        <input type="text" placeholder="Email" asp-for="@Model.Input.Email" />
                    </div>

                    <div class="form-group">
                        <input type="password" placeholder="Password" asp-for="@Model.Input.Password" />
                    </div>

                    <button type="submit" class="btn btn-primary">LOGIN</button>

                    <hr />

                    <p class="text-white">No account? Sign up for one here!</p>
                    <a asp-page="/Account/Register" class="btn btn-primary">Register</a>

                </form>
            </div>
        </div>

    </main>
</body>
</html>