@page
@model Ecommerce_App.Pages.Account.UserProfileModel
@{
    ViewData["Title"] = "UserProfile";
    Layout = "_Home";
}


<!Doctype html>

<html>
<head>
    <style>
        .profile {
            margin: 0px auto;
        }
    </style>
</head>
<body>
    <main>
        <div class="container text-white" style="margin-top:30px;">
            <h2>User Profile</h2>
        </div>

        <div id=Name class="container bg-light border rounded bg-gradient-primary" style="margin-top:30px;margin-bottom:30px;">
            <div class="row" style="margin-top:10px; margin-bottom:10px;">
                
                <div class="col-6 d-flex justify-content-center profile" style="margin-top:30px;">

                    <form enctype="multipart/form-data" method="post">

                        <div class="form-group">
                            <h1>Your current info</h1>
                        </div>

                        <div class="form-group">
                            <p>Name: @Model.CurrentUser.FirstName @Model.CurrentUser.LastName</p>
                            <p>Phone Number: @Model.CurrentUser.PhoneNumber</p>
                            <p>Address: @Model.CurrentUser.Address</p>
                            <p>City: @Model.CurrentUser.City</p>
                            <p>State: @Model.CurrentUser.State</p>
                            <p>Zip: @Model.CurrentUser.Zip</p>
                        </div>

                        <div class="form-group">
                            <a asp-page="/Account/OrderHistory" class="nav-link">Order History</a>
                        </div>

                    </form>

                </div>

                <div class="col-6 d-flex justify-content-center profile" style="margin-top:30px;">

                    <form enctype="multipart/form-data" method="post">

                        <div class="form-group">
                            <h1>Update your info</h1>
                        </div>

                        <div class="form-group">
                            <div asp-validation-summary="All"></div>
                            <input required type="text" placeholder="First Name" asp-for="@Model.CurrentUser.FirstName" />
                            <span asp-validation-for="@Model.CurrentUser.FirstName"></span>
                        </div>

                        <div class="form-group">
                            <input required type="text" placeholder="Last Name" asp-for="@Model.CurrentUser.LastName" />
                            <span asp-validation-for="@Model.CurrentUser.LastName"></span>
                        </div>

                        <div class="form-group">
                            <input required type="text" placeholder="Phone Number" asp-for="@Model.CurrentUser.PhoneNumber" />
                            <span asp-validation-for="@Model.CurrentUser.PhoneNumber"></span>
                        </div>

                        <div class="form-group">
                            <input required type="text" placeholder="Address" asp-for="@Model.CurrentUser.Address" />
                            <span asp-validation-for="@Model.CurrentUser.Address"></span>
                        </div>

                        <div class="form-group">
                            <input required type="text" placeholder="City" asp-for="@Model.CurrentUser.City" />
                            <span asp-validation-for="@Model.CurrentUser.City"></span>
                        </div>

                        <div class="form-group">
                            <input required type="text" placeholder="State" asp-for="@Model.CurrentUser.State" />
                            <span asp-validation-for="@Model.CurrentUser.State"></span>
                        </div>

                        <div class="form-group">
                            <input required type="text" placeholder="Zip" asp-for="@Model.CurrentUser.Zip" />
                            <span asp-validation-for="@Model.CurrentUser.Zip"></span>
                            <hr />
                        </div>

                        <button type="submit" class="btn btn-primary">Update Info</button>

                    </form>
                </div>
            </div>
        </div>
    </main>
</body>
</html>
