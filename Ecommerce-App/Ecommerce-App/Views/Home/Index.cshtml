@model Ecommerce_App.Models.ViewModels.ProductsViewModel
@{
    Layout = "_Home";
}

<!Doctype html>

<html>
<head>
</head>
<body id="Home">
    <main>

        <div class="container text-white" style="margin-top:30px;">
            <h2>Welcome to Mojo Music!</h2>
            <p>Enjoys these featured items from our products collection.</p>
        </div>
      
            @foreach (var item in Model.Prod)
            {
                if (item.Id < 5)
                {
                    <div id=@item.Name class="container bg-light border rounded bg-gradient-primary" style="margin-top:10px">
                        <img src=@item.Image  />
                        <h3>@item.Name</h3>
                        <p>$@item.Price</p>
                        <p>@item.Description</p>
                    </div>
                }
            }

    </main>
</body>
</html>

